<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b7daf4">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="服务日期 :"/>



        <TextView
            android:id="@+id/tv_dialog_fmt_service_record_date"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:background="#8dbadb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="服务内容 :"/>

        <Spinner
            android:spinnerMode="dialog"
            android:id="@+id/sp_dialog_fmt_service_record"
            android:padding="5dp"
            android:background="@drawable/spinner_bg"
            android:layout_marginLeft="15dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
        />
    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注 :"/>

    <EditText
        android:id="@+id/et_dialog_fmt_service_record_mark"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_ziyuan_detail_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="3"/>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_dialog_fmt_service_record_sure"
            android:layout_marginRight="10dp"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_selector"
            android:text="确定"
            />

        <Button
            android:id="@+id/btn_dialog_fmt_service_record_cancel"
            android:layout_marginRight="10dp"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_selector"
            android:text="取消"
            />

    </LinearLayout>

    <!--
    请选择
    职介指导
    政策服务
    -->

</LinearLayout>