                android:padding="5dp"
                android:textColor="@drawable/selector_person_info_textcolor"
                android:gravity="center"
                android:id="@+id/rb_service_record"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:text="服务记录"
                android:background="@drawable/selector_view" />
            <RadioButton
                android:padding="5dp"
                android:textColor="@drawable/selector_person_info_textcolor"
                android:gravity="center"
                android:id="@+id/rb_edu_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:text="教育信息"
                android:background="@drawable/selector_view" />
        </RadioGroup>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_person_info"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

        </android.support.v4.view.ViewPager>
    </LinearLayout>
    
</LinearLayout>