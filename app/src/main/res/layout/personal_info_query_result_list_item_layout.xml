<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_personal_id"
        style="@style/personal_info_list_item"
        android:text="编号"
        />

    <TextView
        android:id="@+id/tv_personal_name"
        style="@style/personal_info_list_item"
        android:text="姓名"/>

    <TextView
        android:id="@+id/tv_personal_sex"
        style="@style/personal_info_list_item"
        android:text="性别"/>
    <TextView
        android:id="@+id/tv_personal_birth_date"
        style="@style/personal_info_list_item"
        android:layout_weight="1.5"
        android:text="出生年月"/>
    <TextView
        android:id="@+id/tv_personal_current_type"
        style="@style/personal_info_list_item"
        android:layout_weight="2"
        android:text="目前状况"/>

    <TextView
        android:id="@+id/tv_personal_situation"
        style="@style/personal_info_list_item"
        android:layout_weight="2"
        android:text="摸底情况"/>

</LinearLayout>