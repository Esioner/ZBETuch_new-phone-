<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/firstpage_docbackground1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_title_bg">

        <ImageView
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wz"/>

        <TextView
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="静安区江场三路228号"/>
        <Button
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:id="@+id/main_layout_work_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_main_layout_work_btn"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
<RelativeLayout
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@drawable/shape_main_layout_person_info"
    android:id="@+id/main_layout_personinfo_rl"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:id="@+id/main_layout_head_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/personhead"/>

        <LinearLayout
            android:id="@+id/main_layout_ll_name"

            android:layout_toRightOf="@id/main_layout_head_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
               />

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/main_layout_name_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

            />

            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/main_layout_ll_email"
        android:layout_below="@id/main_layout_ll_name"

        android:layout_toRightOf="@id/main_layout_head_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子邮箱"
                />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2381447237@qq.com"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/main_layout_ll_email"
        android:layout_toRightOf="@id/main_layout_head_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="13120601125"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


    </LinearLayout>

    <GridView
        android:numColumns="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/main_layout_gv">

    </GridView>

</LinearLayout>