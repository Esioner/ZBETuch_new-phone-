<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_focused="false" android:state_pressed="false"><shape android:shape="rectangle">

        <!-- 渐变 -->
        <solid android:color="#FFFFFF" />

        <gradient android:angle="270" android:centerColor="#FFFFFF" android:endColor="#FFFFFF" android:gradientRadius="10" android:startColor="#66CCFF" android:type="linear" />
        <!-- 描边 -->
        <stroke android:width="2dp" android:color="#FFFFFF" />
        <!-- 圆角 -->
        <corners android:radius="15dp" />

        <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
    </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
        <gradient android:angle="270" android:centerColor="#66CCFF" android:endColor="#FFFFFF" android:gradientRadius="10" android:startColor="#FFFFFF" android:type="linear" />

        <stroke android:width="2dp" android:color="#66CCFF" />

        <corners android:radius="15dp" />

        <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
    </shape></item>

</selector>